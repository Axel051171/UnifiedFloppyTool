# ═══════════════════════════════════════════════════════════════════════════
# UFT - Universal Floppy Tool - udev rules
# ═══════════════════════════════════════════════════════════════════════════
#
# Installation (Linux):
#   sudo cp 99-floppy-devices.rules /etc/udev/rules.d/
#   sudo udevadm control --reload-rules
#   sudo udevadm trigger
#
# Then unplug and replug your device.
#
# Alternative (without udev rules):
#   sudo usermod -a -G dialout $USER
#   (then log out and back in)
#
# ═══════════════════════════════════════════════════════════════════════════

# Greaseweazle F7 (all variants)
SUBSYSTEM=="tty", ATTRS{idVendor}=="1209", ATTRS{idProduct}=="4d69", MODE="0666", GROUP="dialout", SYMLINK+="greaseweazle"
SUBSYSTEM=="tty", ATTRS{idVendor}=="1209", ATTRS{idProduct}=="4d6a", MODE="0666", GROUP="dialout", SYMLINK+="greaseweazle"
SUBSYSTEM=="tty", ATTRS{idVendor}=="1209", ATTRS{idProduct}=="4d6b", MODE="0666", GROUP="dialout", SYMLINK+="greaseweazle"
SUBSYSTEM=="tty", ATTRS{idVendor}=="1209", ATTRS{idProduct}=="4d6c", MODE="0666", GROUP="dialout", SYMLINK+="greaseweazle"
SUBSYSTEM=="tty", ATTRS{idVendor}=="1209", ATTRS{idProduct}=="4d68", MODE="0666", GROUP="dialout", SYMLINK+="greaseweazle"

# Greaseweazle Bootloader
SUBSYSTEM=="usb", ATTRS{idVendor}=="1209", ATTRS{idProduct}=="0001", MODE="0666", GROUP="plugdev"

# FluxEngine (Cypress FX2)
SUBSYSTEM=="usb", ATTRS{idVendor}=="04b4", ATTRS{idProduct}=="8613", MODE="0666", GROUP="plugdev"

# SuperCard Pro
SUBSYSTEM=="tty", ATTRS{idVendor}=="0483", ATTRS{idProduct}=="5740", MODE="0666", GROUP="dialout"

# KryoFlux
SUBSYSTEM=="usb", ATTRS{idVendor}=="03eb", ATTRS{idProduct}=="6124", MODE="0666", GROUP="plugdev"

# ZoomFloppy / XUM1541
SUBSYSTEM=="usb", ATTRS{idVendor}=="16d0", ATTRS{idProduct}=="0504", MODE="0666", GROUP="plugdev"
