# EditorConfig: https://EditorConfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C/C++ files
[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 4

# CMake files
[CMakeLists.txt,*.cmake]
indent_style = space
indent_size = 2

# Qt project files
[*.pro]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
