echo "ğŸ” Running pre-push validation..."

# Run the validation script
if [ -f "scripts/validate_before_push.sh" ]; then
    bash scripts/validate_before_push.sh
    exit $?
else
    echo "âš  Validation script not found, skipping checks"
    exit 0
